# opt.kv

#:kivy 2.0.0

<MyBoxLayout>:
    # Your MyBoxLayout widget kv rules here, if any
    orientation: "vertical"

    Label:
        id: label
        text: "Программа только для ознакомительных целей.\nВерные значения определяются по рисункам\nв изм. №4 к РЛЭ Ан-26"
        size_hint: (1, 0.7)

    UpperCaseTextInput:
        id: airport
        hint_text: "ICAO airport index"
        multiline: False
        on_text: root.on_text_change(self, self.text)
        size_hint: (1, 0.3)
        padding_y: 10
        valign: 'center'

    NumericTextInput:
        id: temperature
        hint_text: "TEMPERATURE"
        size_hint: (1, 0.3)
        padding_y: 10
        valign: 'center'

    NumericTextInput:
        id: qnh
        hint_text: "QNH in hPA"
        input_type: 'number'
        size_hint: (1, 0.3)
        padding_y: 10
        valign: 'center'

    BoxLayout:
        size_hint: (1, 0.3)
        NumericTextInput:
            id: rw_heading
            hint_text: "RW heading"
            input_type: 'number'
            size_hint: (1, 1)
            padding_y: 10
            halign: 'center'
            valign: 'center'

        NumericTextInput:
            id: wind_direction
            hint_text: "Wind direction"
            input_type: 'number'
            size_hint: (1, 1)
            padding_y: 10
            halign: 'center'
            valign: 'center'

        NumericTextInput:
            id: wind_speed
            hint_text: "Wind speed"
            input_type: 'number'
            size_hint: (1, 1)
            padding_y: 10
            halign: 'center'
            valign: 'center'

    Spinner:
        id: flap_spinner
        text: 'Flaps 15'
        values: ('Flaps 15', 'Flaps 5')
        on_text: root.on_spinner_select(self, self.text)
        size_hint: (1, 0.3)

    Button:
        text: 'Calculate'
        on_press: root.btn_pressed()
        size_hint: (1, 0.3)

    Label:
        id: result_label
        halign: 'left'
        valign: 'bottom'
        padding_x: 10
        padding_y: 10
        size_hint: (1, 2)

    Label:
        id: about
        text: "(c) Исаев Андрей 2023"
        halign: 'left'
        valign: 'bottom'
        padding_x: 10
        padding_y: 10
        size_hint: (1, 0.3)
