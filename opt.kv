#:kivy 2.0.0

<MyBoxLayout>:
    do_default_tab: False

    TabbedPanel:
        do_default_tab: False
        TabbedPanelItem:
            text: 'MTOW'
            BoxLayout:
                orientation: 'vertical'

                Label:
                    id: label
                    text: "Программа только для ознакомительных целей.\nВерные значения определяются по рисункам\nв изм. №4 к РЛЭ Ан-26"
                    size_hint: (1, 3)

                UpperCaseTextInput:
                    id: airport
                    hint_text: "ICAO airport index"
                    multiline: False
                    on_text: root.on_text_change(self, self.text)
                    size_hint: (1, 1)
                    padding_y: 10
                    valign: 'center'

                NumericTextInput:
                    id: temperature
                    hint_text: "TEMPERATURE"
                    size_hint: (1, 1)
                    padding_y: 10
                    valign: 'center'

                NumericTextInput:
                    id: qnh
                    hint_text: "QNH in hPA"
                    input_type: 'number'
                    size_hint: (1, 1)
                    padding_y: 10
                    valign: 'center'

                BoxLayout:
                    size_hint: (1, 1)
                    NumericTextInput:
                        id: rw_heading
                        hint_text: "RW heading"
                        input_type: 'number'
                        size_hint: (1, 1)
                        padding_y: 10
                        halign: 'center'
                        valign: 'center'

                    NumericTextInput:
                        id: wind_direction
                        hint_text: "Wind direction"
                        input_type: 'number'
                        size_hint: (1, 1)
                        padding_y: 10
                        halign: 'center'
                        valign: 'center'

                    NumericTextInput:
                        id: wind_speed
                        hint_text: "Wind speed"
                        input_type: 'number'
                        size_hint: (1, 1)
                        padding_y: 10
                        halign: 'center'
                        valign: 'center'

                Spinner:
                    id: flap_spinner
                    text: 'Flaps 15'
                    values: ('Flaps 15', 'Flaps 5')
                    on_text: root.flaps_spinner_select(self, self.text)
                    size_hint: (1, 1)

                Button:
                    id: calc_mtow_button
                    text: 'Calculate'
                    on_press: root.calc_mtow_button()
                    size_hint: (1, 1)

                Label:
                    id: free_space
                    halign: 'left'
                    valign: 'bottom'
                    padding_x: 10
                    padding_y: 10
                    size_hint: (1, 6)

                Label:
                    id: about
                    text: "(c) Исаев Андрей 2023"
                    halign: 'left'
                    valign: 'bottom'
                    padding_x: 10
                    padding_y: 10
                    size_hint: (1, 1)

        TabbedPanelItem:
            text: 'Загрузка'
            BoxLayout:
                orientation: "vertical"
                Label:
                    id: tab2_label_mtow
                    text: "Рассчет свободной загрузки"
                    size_hint: (1, 3)

                BoxLayout:
                    size_hint: (1, 1)
                    NumericTextInput:
                        id: acft_id_text_input
                        hint_text: "Бортовой №"
                        input_type: 'number'
                        size_hint: (1, 1)
                        padding_y: 10
                        halign: 'center'
                        valign: 'center'

                    Spinner:
                        id: crew_onboard_spinner
                        text: "Экипаж"
                        values: ('3', '4', '5', '6', '7')
                        on_text: root.crew_onboard_spinner(self, self.text)
                        size_hint: (0.4, 1)

                    BoxLayout:
                        orientation: 'horizontal'
                        size_hint: (1, 1)

                        CheckBox:
                            id: catering
                            halign: 'right'

                        Label:
                            text: "Кухня 40кг"
                            size_hint: (1, 1)

                        Label:
                            size_hint: (1, 1)

                Button:
                    id: calc_free_button
                    text: 'Calculate'
                    on_press: root.calc_free_button()
                    size_hint: (1, 1)

                Label:
                    id: free_space
                    halign: 'left'
                    valign: 'bottom'
                    padding_x: 10
                    padding_y: 10
                    size_hint: (1, 6)

                Label:
                    id: about
                    text: "(c) Исаев Андрей 2023"
                    halign: 'left'
                    valign: 'bottom'
                    padding_x: 10
                    padding_y: 10
                    size_hint: (1, 1)
